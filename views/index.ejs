<!DOCTYPE html>
<html>
<head>
    <title>Payroll Dashboard</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

<h1>Employee Payroll Dashboard</h1>
<a href="/add">Add Employee</a>

<table>
    <tr>
        <th>Name</th>
        <th>Department</th>
        <th>Basic Salary</th>
        <th>Tax (10%)</th>
        <th>Net Salary</th>
        <th>Actions</th>
    </tr>

    <% employees.forEach(emp => { 
        const tax = emp.basicSalary * 0.10;
        const net = emp.basicSalary - tax;
    %>

    <tr>
        <td><%= emp.name %></td>
        <td><%= emp.department %></td>
        <td><%= emp.basicSalary %></td>
        <td><%= tax.toFixed(2) %></td>
        <td><%= net.toFixed(2) %></td>
        <td>
            <a href="/edit/<%= emp.id %>">Edit</a>
            <a href="/delete/<%= emp.id %>">Delete</a>
        </td>
    </tr>

    <% }) %>
</table>

</body>
</html>
