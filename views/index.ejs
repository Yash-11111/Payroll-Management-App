<!DOCTYPE html>
<html>
<head>
  <title>Employee Payroll</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="container">

  <!-- Header -->
  <div class="top-header">
    <div class="logo-section">
      <div class="logo-box">ðŸ’¼</div>
      <div class="logo-text">
        <span class="emp">EMPLOYEE</span>
        <span class="pay">PAYROLL</span>
      </div>
    </div>

    <div class="right-actions">
      <a href="/add" class="add-btn">+ Add User</a>
    </div>
  </div>

  <h2 class="page-title">Employee Details</h2>

  <div class="table-card">
    <table>
      <thead>
        <tr>
          <th>NAME</th>
          <th>DEPARTMENT</th>
          <th>BASIC SALARY</th>
          <th>TAX (10%)</th>
          <th>NET SALARY</th>
          <th>ACTIONS</th>
        </tr>
      </thead>

      <tbody>
        <% employees.forEach(emp => { 
           const tax = emp.basicSalary * 0.10;
           const net = emp.basicSalary - tax;
        %>

        <tr>
          <td><%= emp.name %></td>
          <td><%= emp.department %></td>
          <td>â‚¹ <%= emp.basicSalary %></td>
          <td>â‚¹ <%= tax.toFixed(2) %></td>
          <td>â‚¹ <%= net.toFixed(2) %></td>
          <td>
            <a href="/edit/<%= emp.id %>" class="edit-btn">Edit</a>
            <a href="/delete/<%= emp.id %>" class="delete-btn">Delete</a>
          </td>
        </tr>

        <% }) %>
      </tbody>
    </table>
  </div>

</div>

</body>
</html>
